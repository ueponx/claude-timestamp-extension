{
  "manifest_version": 3,
  "name": "Claude Timestamp Extension",
  "version": "1.1.0",
  "description": "Claudeのチャット画面とRecentsページにタイムスタンプを表示します",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
